@model IEnumerable<Cafe.Web.Models.Categories>

@{
    ViewBag.Title = "Menu";
    Layout = null;
}
<style>
    #uL {
        padding: 0px;
        margin: 0px;
    }


    #Li {
        float: left;
        list-style: none;
        height: 180px;
        margin: 20px 0px 20px 48px;
        box-sizing: border-box;
    }

        #Li:hover {
            opacity: 0.8;
        }

        #Li .Img {
            text-align: center;
            font-size: x-large;
            font-weight: 700;
        }

        #Li .Product {
            text-align: center;
            font-size: x-large;
            font-weight: 700;
        }

        #Li .Price {
            text-align: center;
            font-size: x-large;
            font-weight: 100;
        }

    @@media screen and (max-width:1250px) {
        #uL #Li {
            width: 40%;
            margin-left: 40px;
        }
    }
</style>
@Html.ActionLink($"OrderLst({ViewBag.TotalQuantity})","ListCart")
<h2 style="text-align:center">Menu</h2>
<span>Welcome Back @ViewBag.Name </span> <span style="float: right">Table No : @ViewBag.TableNo</span>

@if (Model.Count() == 0)
{
    <div>
        No Categories
    </div>
}
else
{
    <ul id="uL">
        @foreach (var item in Model)
        {
            <li id="Li">
                <div class="Img">
                    <a href="@Url.Action("AddItem", "Customers", new { id = item.CategoriesId })">
                        @{
                            var base64 = Convert.ToBase64String(item.FoodImg);
                            var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                        }
                        <img src="@imgsrc" style="max-width : 200px ;max-height:100px" />
                    </a>
                </div>
                <div class="Product">
                    <a href="@Url.Action("AddItem", "Customers", new { id = item.CategoriesId })" style="text-decoration:none;">
                        @Html.DisplayFor(modelItem => item.FoodName)
                    </a>
                </div>
                <div class="Price">@Html.DisplayFor(modelItem => item.UnitPrice)</div>
            </li>
        }
    </ul>
}