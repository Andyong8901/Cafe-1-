@model Cafe.DomainModelEntity.User

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<html>
<head>
    <link href="~/Content/Login.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <img class="Cafelogo" alt="Logo" src="@Url.Content("~/Content/Img/CafeLogo.png")" />
            <h2>Admin Login</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @id = "LabelText" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10" style="display:inline-block;">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password", @id = "LabelTextPass" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    <button type="button" class="btn btn-default" onclick="myFunction()" name="dynamic1"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></button>

                </div>
            </div>
            @if (ViewBag.error != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.error</div>
            }
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" id="Button" class="btn btn-default" />
                    @Html.ActionLink("Login As Cashier", "Login", "Cashier", null, new { @class = "btn btn-default", @id = "ExtraButton" })
                    @Html.ActionLink("Login As Customer", "Login", "Customers", null, new { @class = "btn btn-default", @id = "ExtraButton" })
                </div>
            </div>
        </div>
    }
</body>
</html>

<script>
    const myFunction = () => {
        debugger;
        var y = document.getElementById("LabelTextPass");
        var myButton = document.getElementsByName('dynamic1');
        myButton.forEach(function (element) {
            element.onclick = function () {

                if (y.type === "text") {
                    y.type = "password";
                    element.firstChild.textContent = '';
                    element.firstChild.className = "glyphicon glyphicon-eye-open";
                } else {
                    y.type = "text";
                    element.firstChild.textContent = 'Hide';
                    element.firstChild.className = "";
                }
            }
        })
    }
    myFunction();
</script>